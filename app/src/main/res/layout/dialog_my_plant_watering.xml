<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lightbeige"
        android:backgroundTint="@color/lightbeige"
        android:paddingTop="50dp"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/my_plant_watering_last_water_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp"
            android:text="마지막으로 물을 준 날짜"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/my_plant_watering_watering_period_tv"
            app:layout_constraintEnd_toStartOf="@id/my_plant_watering_last_water_date_et"
            app:layout_constraintStart_toStartOf="@+id/my_plant_watering_watering_period_tv" />

        <EditText
            android:id="@+id/my_plant_watering_last_water_date_et"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="0000/00/00"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/my_plant_watering_last_water_tv"
            app:layout_constraintEnd_toEndOf="@id/my_plant_watering_watering_period_et"
            app:layout_constraintStart_toEndOf="@id/my_plant_watering_last_water_tv"
            app:layout_constraintTop_toTopOf="@id/my_plant_watering_last_water_tv" />

        <TextView
            android:id="@+id/my_plant_watering_watering_period_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관수 주기"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/my_plant_watering_watering_period_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/my_plant_watering_watering_period_et"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="ex) 7"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/my_plant_watering_watering_period_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/my_plant_watering_watering_period_tv" />

        <TextView
            android:id="@+id/my_plant_watering_ok_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="확인"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/my_plant_watering_watering_period_et"
            app:layout_constraintTop_toBottomOf="@id/my_plant_watering_watering_period_et" />

        <TextView
            android:id="@+id/my_plant_watering_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="취소"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/my_plant_watering_ok_tv"
            app:layout_constraintEnd_toStartOf="@id/my_plant_watering_ok_tv"
            app:layout_constraintTop_toTopOf="@id/my_plant_watering_ok_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>